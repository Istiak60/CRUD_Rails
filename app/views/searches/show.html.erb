<h1>Search Results</h1>
<p><%= link_to "Back", new_search_path %></p>

<% if @search.search_articles.empty? %>
    <p>No articles were found.</p>
<% else %>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th>Show</th>
                <th>Edit</th>
                <th>Destroy</th>
                
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @search.search_articles.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= article.body %></td>
                 <td><%= link_to 'Show', article %></td>
                <td><%= link_to 'Edit', edit_article_path(article) %></td>
                <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
</table>
<% end %>